<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ps_rel_layout"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ps_lin_layout"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/ps_avatar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:background="@color/colorPrimaryDark"
                android:contentDescription="TODO"
                android:padding="5dp"
                android:src="@drawable/ic_add_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ps_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:hint="Name"
                    app:fontFamily="@font/unkempt"
                    android:textColor="@color/colorWhite"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/ps_email_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:hint="Email"
                    app:fontFamily="@font/unkempt"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/ps_phone_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:hint="Phone"
                    app:fontFamily="@font/unkempt"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>