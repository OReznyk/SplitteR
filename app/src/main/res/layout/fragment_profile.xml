<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    tools:context=".ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ps_coverIv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorPrimary"
                android:scaleType="fitXY">

            </ImageView>

            <LinearLayout
                android:id="@+id/ps_lin_layout"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:layout_marginTop="95dp">

                <ImageView
                    android:id="@+id/ps_avatar"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="fitXY"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:src="@drawable/ic_add_avatar" />

                <LinearLayout
                    android:layout_width="179dp"
                    android:layout_height="123dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ps_name_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:hint="Name"
                        android:textColor="@color/colorWhite"
                        android:textSize="36sp"
                        app:fontFamily="@font/unkempt" />

                    <TextView
                        android:id="@+id/ps_email_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:hint="Email"
                        android:textColor="@color/colorWhite"
                        android:textSize="24sp"
                        app:fontFamily="@font/unkempt" />

                    <TextView
                        android:id="@+id/ps_phone_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:hint="Phone"
                        android:textColor="@color/colorWhite"
                        android:textSize="24sp"
                        app:fontFamily="@font/unkempt" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:paddingRight="20dp"
                    android:src="@drawable/ic_settings" />

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>