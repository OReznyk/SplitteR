<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp">

    <LinearLayout
        android:id="@+id/product_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_title_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unkempt_bold"
                android:hint="Product's title"
                android:textColor="@color/colorWhite"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/product_priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unkempt"
                android:hint="Price"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/product_total_to_buy"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="To buy"
            android:inputType="number"
            android:textAlignment="center"
            android:textColorHint="@color/colorWhite" />

        <RatingBar
            android:id="@+id/product_to_buy_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:numStars="1"
            android:stepSize="1"
            android:isIndicator="true"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>