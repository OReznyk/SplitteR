<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/group_imgIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ic_add_avatar" />

        <LinearLayout
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/group_title_Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unkempt_bold"
                android:hint="Group's title"
                android:textColor="@color/colorWhite"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/group_participantsTv"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unkempt"
                android:hint="Group's participants"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/groups_deleteTv"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_send_delete" />

        <ImageView
            android:id="@+id/group_settingsTv"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_send_setttings" />
    </LinearLayout>


</androidx.cardview.widget.CardView>